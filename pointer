#include<stdio.h>
#include<conio.h>
#define ROWS 3
#define COLS 3
void inputmatrix(int matrix[ROWS][COLS], int rows, int cols);           /* Function declaration to input*/
void printmatrix(int matrix[ROWS][COLS], int rows, int cols);           /* Functions declaration to print the matrix*/

void main()
{
    int matrix[ROWS][COLS],i,j;
    printf("Enter elements in %dx%d matrix.\n", ROWS, COLS);            /* Input elements in matrix */
    inputmatrix(matrix, ROWS, COLS);
    printf("Elements of %dx%d matrix.\n", ROWS, COLS);                  /* Print elements in matrix */
    printmatrix(matrix, ROWS, COLS);
    getch();
}
void inputmatrix(int matrix[ROWS][COLS], int rows, int cols)
{
    int i, j;
    for(i = 0; i < rows; i++)
    {
        for(j = 0; j < cols; j++)
        {
            scanf("%d", (*(matrix + i) + j));                          // (*(matrix + i) + j is equivalent to matrix[i][j]
        }
    }
}
void printmatrix(int (*matrix)[COLS], int rows, int cols)
{
    int i, j;
    for (i = 0; i < rows; i++)
    {
        for (j = 0; j < cols; j++)
        {
            printf("%d ", *(*(matrix + i) + j));                      // *(*(matrix + i) + j) is equivalent to matrix[i][j]
        }

        printf("\n");
    }
}
